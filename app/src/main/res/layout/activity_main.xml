<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rapsealk.mobilesw.MainActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButtonWorldPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tint="@android:color/holo_blue_light"
                app:srcCompat="@drawable/ic_collections_black_48dp"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="41dp" />

            <ImageButton
                android:id="@+id/imageButtonSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@android:color/background_dark"
                android:tint="@android:color/darker_gray"
                app:srcCompat="@drawable/ic_settings_black_48dp"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="266dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageButton
                android:id="@+id/imageButtonMyPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.52"
                android:backgroundTint="@android:color/background_light"
                android:tint="@android:color/holo_orange_dark"
                app:srcCompat="@drawable/ic_person_black_48dp"
                tools:layout_editor_absoluteX="296dp"
                tools:layout_editor_absoluteY="171dp" />

            <ImageButton
                android:id="@+id/imageButtonInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.49"
                android:tint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_info_black_48dp"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="427dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
